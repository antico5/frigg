<h1>Listing Posts</h1>
<% @posts.each do |post| %>
  <h2><%= post.title %></h2>
  <%= truncate(post.body, :length => 100, :escape => false) %>
  <%= link_to 'Show', blog_post_path(:id => post.id), :class =>'btn-xs btn-primary' %>
  <%= link_to 'Edit', edit_blog_post(:id => post.id), :class =>'btn-xs btn-primary' %>
  <%= link_to 'Destroy', blog_post_path(:id => post.id), :class =>'btn-xs btn-primary', method: :delete, data: { confirm: 'Are you sure?' } %>
<hr>
<% end %>
<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
<br>
