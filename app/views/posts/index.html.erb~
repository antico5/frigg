<h1>Listing Posts</h1>
<% @posts.each do |post| %>
  <h2><%= post.title %></h2>
  <p><span class="glyphicon glyphicon-time"></span> Posted on: <%= time_ago_in_words post.updated_at %> </p>
  <%= truncate(post.body, :length => 100, :escape => false) %>
  <%= show_link post %>
<hr>
<% end %>
<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
